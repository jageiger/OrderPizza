      <h2><%= pluralize(@item_size.errors.count, "error") %> prohibited this item_size from being saved:</h2>

      <ul>
      <% @item_size.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
