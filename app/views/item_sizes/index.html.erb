<h1>Listing item_sizes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Extras</th>
      <th>Row order</th>
      <th>Item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_sizes.each do |item_size| %>
      <tr>
        <td><%= item_size.name %></td>
        <td><%= item_size.price %></td>
        <td><%= item_size.extras %></td>
        <td><%= item_size.row_order %></td>
        <td><%= item_size.item_id %></td>
        <td><%= link_to 'Show', item_size %></td>
        <td><%= link_to 'Edit', edit_item_size_path(item_size) %></td>
        <td><%= link_to 'Destroy', item_size, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

